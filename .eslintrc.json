{
  "root": true,
  "extends": ["next/core-web-vitals", "plugin:jsx-a11y/recommended", "plugin:cypress/recommended", "prettier"],
  "plugins": ["testing-library", "cypress", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react", "plugin:jsx-a11y/recommended"]
    }
  ]
}